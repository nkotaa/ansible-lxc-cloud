#cloud-config-archive
# Role required base image customizations

- type: "text/cloud-boothook"
  content: |
    #!/bin/sh

    cloud-init-per instance instance-ssh-access /bin/false && exit 0
    ## specify POLICY-RC.D-DECLARATIVE(8) so sshd is not started, which otherwise causes boothook to hang
    echo "exit 101" > /usr/sbin/policy-rc.d
    chmod +x /usr/sbin/policy-rc.d
    apt-get update && apt-get install --yes --no-install-recommends openssh-server
    rm -f /usr/sbin/policy-rc.d
    rm -rf /var/lib/apt/lists/*
